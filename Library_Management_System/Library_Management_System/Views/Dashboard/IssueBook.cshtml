<link href="~/css/IndexStyle.css" rel="stylesheet" />
@model Library_Management_System.Models.IssueDetails

@{
    ViewData["Title"] = "IssueBook";
}

<h3>Issue Book</h3>
<hr />

<h3 class="text-success">@ViewBag.Message</h3>
<h3 class="text-danger">@ViewBag.Error</h3>
<div class="row">
    <div class="col-md-4">
        <form asp-action="IssueBook">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label for="Book_Id">Book Id</label>
                <input asp-for="Book_Id" value="@TempData["Book_Id"]" class="form-control" readonly />
                <span asp-validation-for="Book_Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Book_Name">Book Name</label>
                <input asp-for="Book_Name" value="@TempData["Book_Name"]" class="form-control" readonly />
                <span asp-validation-for="Book_Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Author">Author</label>
                <input asp-for="Book_Author" value="@TempData["Author"]" class="form-control" readonly />
                <span asp-validation-for="Book_Author" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="User_Id">User Id</label>
                <input asp-for="User_Id" class="form-control" required />
                <span asp-validation-for="User_Id" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="Issue_Date">Issue Date</label>
                <input type="date" asp-for="Issue_Date" class="form-control" required />
                <span asp-validation-for="Issue_Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
<br />
<br />
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
