<link href="~/css/IndexStyle.css" rel="stylesheet" />
@model IEnumerable<Library_Management_System.Models.IssueDetails>

@{
    ViewData["Title"] = "IssuedBook";
}

<h1>Issued Books</h1>

<p>
    <a asp-action="Search">Search User</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                <label for="Book_Id">Book Id</label>
            </th>
            <th>
                <label for="Book_Name">Book Name</label>
            </th>
            <th>
                <label for="Author">Author</label>
            </th>
            <th>
                <label for="User_Id">User Id</label>
            </th>
            <th>
                <label for="User_Name">User Name</label>
            </th>
            <th>
                <label for="Phone_Number">Phone Number</label>
            </th>
            <th>
                <label for="Issue_Date">Issue Date</label>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Book_Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Book_Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Book_Author)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.User_Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.User_Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone_Number)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Issue_Date)
                </td>
                <td>
                    <a asp-action="ReturnBook" asp-route-id="@item.Id">Return Book</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div>
    <a asp-action="Index">Back to List</a>
</div>
