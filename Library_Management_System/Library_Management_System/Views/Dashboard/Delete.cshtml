        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book_Id)
        </dd>
        <dt class="col-sm-2">
            <label for="Book_Name">Book Name</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book_Name)
        </dd>
        <dt class="col-sm-2">
