<link href="~/css/IndexStyle.css" rel="stylesheet" />
@model Library_Management_System.Models.UserDetails

@{
    ViewData["Title"] = "AddNewUser";
}

<h3>Add New User</h3>
<hr />

<h3 class="text-success">@ViewBag.Message</h3>
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddNewUser">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label for="User_Name">User Name</label>
                <input asp-for="User_Name" class="form-control" />
                <span asp-validation-for="User_Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Age">Age</label>
                <input asp-for="Age" class="form-control" />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Address">Address</label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Phone_no">Phone No.</label>
                <input asp-for="Phone_no" class="form-control" />
                <span asp-validation-for="Phone_no" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
<br />
<br />
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
